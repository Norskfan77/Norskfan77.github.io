html
  head
    link(rel='icon' type='image/x-icon' href='/favicon.ico')
    title="Norwegian Text Highlighter"
    link(rel='stylesheet', href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css')
    script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js')
    link(rel="stylesheet", href="/style.css")
  body
    .container
      h1 Norwegian Text Highlighter
      img(src="/apple-touch-icon.png", alt="Lierne #1", class="logo")

      button.about-btn(onclick="location.href='/about'") About Us


      .legend
        h3 Legend:
        .button-container
          button#toggleAllButton Disable All
        div#legendContainer

      textarea#textInput(placeholder="Type Norwegian text here...")

      .button-container
        button#analyzeButton Analyze

      p#outputText

      script(src='/script.js')
